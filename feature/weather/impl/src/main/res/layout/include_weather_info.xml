<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivWeatherInfoIcon"
        android:layout_width="@dimen/size_settings_icon"
        android:layout_height="@dimen/size_settings_icon"
        android:layout_marginTop="@dimen/spacing_1x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvWeatherInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_1x"
        app:layout_constraintBottom_toBottomOf="@id/ivWeatherInfoIcon"
        app:layout_constraintStart_toEndOf="@id/ivWeatherInfoIcon"
        app:layout_constraintTop_toTopOf="@id/ivWeatherInfoIcon"
        tools:text="Sample weather info" />

    <TextView
        android:id="@+id/tvWeatherInfoValue"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/ivWeatherInfoIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivWeatherInfoIcon"
        tools:text="Value" />

</androidx.constraintlayout.widget.ConstraintLayout>